# Use iOS 8 and above
platform :ios, '8.0'

# Specify Workspace
workspace 'SDJAvenir'

target 'SDJAvenir' do
  # Stripe
  pod 'Stripe', '~> 11.2.0'

  # Install additional dependencies
  pod 'Firebase/Core'
  pod 'Firebase/Auth'
  pod 'Firebase/Crash'
  pod 'Firebase/Database'
  pod 'Firebase/Firestore'
  pod 'Firebase/Messaging'
  pod 'Firebase/Performance'
  pod 'Firebase/Storage'
  pod 'tipsi-stripe', :path => '../node_modules/tipsi-stripe'

end